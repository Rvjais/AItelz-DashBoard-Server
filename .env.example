# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (Update with your production URL for deployment)
FRONTEND_URL=http://localhost:5173

# Database - MongoDB Connection String
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://your-username:your-password@cluster0.xxxxx.mongodb.net/your-database?retryWrites=true&w=majority

# Authentication - Generate a strong secret (minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-change-this

# Bolna AI Service
BOLNA_API_URL=https://api.bolna.ai
BOLNA_BEARER_TOKEN=bn-your-bolna-bearer-token-here

# OpenAI API (for AI data extraction)
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Email Service Configuration (Zoho/SMTP for password reset)
EMAIL_HOST=smtp.zoho.in
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=noreply@yourdomain.com
EMAIL_PASSWORD=your-zoho-app-password-here

# Google Apps Script URL (legacy webhook method)
GOOGLE_SCRIPT_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID_HERE/exec

# Google OAuth & Sheets API (for direct Sheets integration)
GOOGLE_CLIENT_ID=1234567890-abcdefghijklmnop.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# Encryption Key for OAuth tokens (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=your_64_character_hex_key_example_a1b2c3d4e5f6a7b8c9d0e1f2a3b4c5d6
